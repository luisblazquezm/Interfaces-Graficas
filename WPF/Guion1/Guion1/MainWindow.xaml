<Window x:Class="Guion1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Guion1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel HorizontalAlignment="Left" Margin="10" Width="200" Height="300"> <!-- StackPanel de los botones-->
            <Button Name="BotonInvierte" Content="Invierte" Margin="40" Click="BotonInvierte_Click" Height="30">
                
            </Button>
            <Button Name="BotonMayuscula" Content="Mayuscula" Margin="40" Click="BotonMayuscula_Click" Height="30">
                
            </Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Margin="10" Width="500" Height="300"> <!--StackPanel del label-->
            <TextBox Name="CajaTexto" Margin="15" Height="30" BorderThickness="2" BorderBrush="Black">
                
            </TextBox>
            <Label Name="Etiqueta" Margin="15" Height="30" BorderThickness="2" BorderBrush="Black">
                
            </Label>
        </StackPanel>
    </StackPanel>
</Window>
