<Window x:Class="Ejercicio4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="850" Width="825"
        SizeChanged="Window_SizeChanged">
    <Grid x:Name="theGrid" 
           MouseLeftButtonDown="theGrid_MouseLeftButtonDown"
        MouseLeftButtonUp="theGrid_MouseLeftButtonUp"
        MouseMove="theGrid_MouseMove" Margin="0,0,2,1">
        <Border x:Name="clipBorder" BorderThickness="2" BorderBrush="Black" ClipToBounds="True" Margin="10">
            <Canvas x:Name="lienzo" Background="Transparent" MouseWheel="Canvas_MouseWheel" Margin="8">
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <MatrixTransform x:Name="mt"/>
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
        </Border>
        <Grid Margin="0,0,10,10"/>

    </Grid>
</Window>
